{
    "editor.semanticHighlighting.enabled": true,
    "terminal.integrated.minimumContrastRatio": 1,
    "editor.fontWeight": "600",
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.cursorStyle": "block",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.experimental.asyncTokenization": true,
    "breadcrumbs.icons": false,
    "breadcrumbs.showConstants": true,
    "breadcrumbs.symbolPath": "off",
    "editor.cursorBlinking": "phase",
    //
    "python.testing.pytestArgs": [
        "${workspaceFolder}/testes",
        "--asyncio-mode=auto",
        "--disable-pytest-warnings",
        "--disable-warnings",
        // "--quiet",
        // "--disable-warnings",
        // "ignore::DeprecationWarning",
        "-vv",
        // "--numprocesses=4",
        // "-W"
        // "no:logging",
        //     // FLAGS COVERAGE VSCODE TEST EXTENSION BUG
        //     // "--cov=. ",
        //     // "--cov-report",
        //     // "xml:cov.xml",
        //     // "--cov-append",
        // "--color=yes"
    ],
    // EDITOR SETTINGS
    // "ruff.lint.args": [
    //     "--config=${workspaceFolder}/ruff.toml"
    // ],
    // "ruff.format.args": [
    //     "--config=${workspaceFolder}/ruff.toml"
    // ],
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "python.analysis.ignore": [
        "*"
    ],
    "python.analysis.completeFunctionParens": true,
    // "python.languageServer": "Pylance",
    "editor.suggest.showWords": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggest.localityBonus": true,
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggestFontSize": 16,
    "editor.suggest.filterGraceful": true,
    "editor.fontLigatures": true,
    //
    // PYTHON
    "sourcery.codeLens": false,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.addImport.heuristics": true,
    "python.analysis.autoImportCompletions": false,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.indexing": true,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.analysis.inlayHints.parameterTypes": true,
    "python.analysis.inlayHints.returnType": true,
    "python.analysis.exclude": [
        "**/.venv"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "ruff.enable": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
    },
    //
    // VSCODE LIGHTWEIGHT: Exclude Files and Folders and Watcher to Improve Performance
    "search.exclude": {
        // "**/.venv/**": true,
        "**/.git/**": true,
        "**/.idea/**": true,
        "**/build/**": true,
        "**/android": true,
        "**/macos": true,
        "**/dist": true,
        "**/web": true,
        "**/ios": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/node_modules/**": true,
        "**/.dart_tool/**": true
    },
    "files.exclude": {
        // "**/.venv/**": true,
        "**/.git/**": true,
        "**/.idea/**": true,
        "**/build/**": true,
        "**/android": true,
        "**/macos": true,
        "**/dist": true,
        "**/web": true,
        "**/ios": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/node_modules/**": true,
        "**/.dart_tool/**": true,
    },
    "files.watcherExclude": {
        "**/.pytest_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/node_modules/**": true,
        "**/.dart_tool/**": true,
        "**/.venv/**": true,
        "**/.git/**": true,
        "**/.idea/**": true,
        "**/build/**": true,
        "**/android": true,
        "**/macos": true,
        "**/dist": true,
        "**/web": true,
        "**/ios": true,
        "**/.git": true
    },
}